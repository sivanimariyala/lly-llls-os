#include <stdio.h>

int main() {
    int n, bt[20], rem[20], wt[20], tat[20], tq, time = 0;
    float awt = 0, atat = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);
    printf("Enter burst times:\n");
    for(int i=0;i<n;i++) {
        scanf("%d", &bt[i]);
        rem[i] = bt[i];
    }
    printf("Enter time quantum: ");
    scanf("%d", &tq);

    while(1) {
        int done = 1;
        for(int i=0;i<n;i++) {
            if(rem[i] > 0) {
                done = 0;
                if(rem[i] > tq)
                    time += tq, rem[i] -= tq;
                else {
                    time += rem[i];
                    wt[i] = time - bt[i];
                    rem[i] = 0;
                }
            }
        }
        if(done) break;
    }

    for(int i=0;i<n;i++) {
        tat[i] = bt[i] + wt[i];
        awt += wt[i];
        atat += tat[i];
    }

    printf("\nProcess\tBT\tWT\tTAT\n");
    for(int i=0;i<n;i++)
        printf("P%d\t%d\t%d\t%d\n", i+1, bt[i], wt[i], tat[i]);

    printf("\nAverage WT: %.2f", awt/n);
    printf("\nAverage TAT: %.2f\n", atat/n);
    return 0;
}
