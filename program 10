#include <stdio.h>

int main() {
    int f[50], index[50], i, j, n, ind, count = 0;

    for(i=0;i<50;i++)
        f[i] = 0;

    printf("Enter index block: ");
    scanf("%d", &ind);

    if(f[ind] == 0) {
        f[ind] = 1;
        printf("Enter number of blocks for the file: ");
        scanf("%d", &n);

        printf("Enter the blocks to be allocated: ");
        for(i=0;i<n;i++)
            scanf("%d", &index[i]);

        for(i=0;i<n;i++)
            if(f[index[i]] == 0)
                f[index[i]] = 1;
            else {
                printf("Block already allocated.\n");
                return 0;
            }

        printf("\nFile allocated successfully.\nIndex Block: %d\nBlocks: ", ind);
        for(i=0;i<n;i++)
            printf("%d ", index[i]);
        printf("\n");
    }
    else
        printf("Index block already allocated.\n");
    return 0;
}
